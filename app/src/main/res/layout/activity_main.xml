<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/root"
             android:orientation="vertical"
             android:background="#FAF9FA"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <FrameLayout
        android:layout_weight="1"
        android:id="@+id/layout_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/box"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/shape" />


    </FrameLayout>


    <RelativeLayout
        android:id="@+id/layout_controller"
        android:background="#F5F4F5"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_stiffness"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="STIFFNESS"
            android:textSize="12dp"
            android:textStyle="bold"/>/>

        <SeekBar
            android:id="@+id/stiffness"
            android:progress="80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_stiffness"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_damping"
            android:layout_below="@+id/stiffness"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:text="DAMPING"
            android:textSize="12dp"
            android:textStyle="bold"/>/>

        <SeekBar
            android:id="@+id/damping"
            android:progress="54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_damping"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"/>
        
        
        
    </RelativeLayout>





</LinearLayout>